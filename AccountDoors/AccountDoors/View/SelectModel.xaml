<Window x:Class="AccountDoors.View.SelectModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountDoors.ViewModel"
        mc:Ignorable="d"
        Title="Выбор модели" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainWindowViewModel></local:MainWindowViewModel>
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding ModelsDoors}" Style="{StaticResource Horizontal_list}" ItemTemplate="{StaticResource listBoxItems_photo}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
            
        </ListBox>
    </Grid>
</Window>
